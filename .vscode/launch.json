{
    "configurations": [
        {
            "type": "node-terminal",
            "name": "JavaScript 调试终端",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug TS",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node", "--files"],
            "args": ["${file}"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
